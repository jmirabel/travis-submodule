#!/bin/sh
set -ev

# On OSX, there are too many warnings generated by the dependencies.
# Turn off verbosity.
: ${MAKE_REDIRECT_STDERR=1}
export MAKE_REDIRECT_STDERR

. ${TRAVIS_SUBMODULE}/common/functions.sh

# Some functions
install_libccd()
{
  brew install libccd
}

install_doxygen()
{
  brew install doxygen
}

brew tap homebrew/science
brew install cmake tinyxml pkg-config
